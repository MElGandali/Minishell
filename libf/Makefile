NAME = libft.a
			CC = gcc
	AR = ar rcs

		CFLAGS = -Wall - Wextra - Werror - I.RM = rm - rf SRC = $(wildcard *.c)
														OBJ = $(SRC
																:.c =.o)

																all : $(NAME)

																			bin : main.o
																					$(CC) main.o libft.a
																						-
			o bin
				main.o : main.c
							@$(CC) -
			c $ <
		-o $ @

		$(NAME)
	: $(OBJ)
			@$(AR) $ @$ ^
	@echo-- --compilation completed-- -- %.o : %.c @$(CC) - c $ < -o $ @

																	clean : @$(RM) $(OBJ)
																				fclean : clean
																						@$(RM) $(NAME)
																							re : fclean all

																										.PHONY : all clean re
